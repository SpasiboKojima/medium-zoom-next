{
	"name": "medium-zoom-monorepo",
	"private": true,
	"packageManager": "bun@1.2.21",
	"workspaces": [
		"apps/*",
		"apps/examples/*",
		"packages/*"
	],
	"license": "MIT",
	"author": {
		"name": "Francois Chalifour",
		"email": "francois.chalifour@gmail.com",
		"url": "https://francoischalifour.com"
	},
	"scripts": {
		"start": "bun run dev",
		"dev": "rollup --config --watch",
		"format": "biome check --write",
		"build:website": "(cd website && bun && bun run build) && bun run build && bun run build:storybook",
		"changelog:update": "conventional-changelog -p angular -i CHANGELOG.md -s",
		"release": "release-it",
		"release:next": "release-it --preRelease=next"
	},
	"keywords": [
		"medium",
		"image",
		"zoom",
		"picture",
		"lightbox",
		"click",
		"scroll",
		"pure",
		"plain",
		"vanilla",
		"javascript",
		"ux",
		"performance",
		"event",
		"medium-zoom",
		"zoomable"
	],
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"conventional-changelog-cli": "2.0.28",
		"lefthook": "^1.12.3",
		"release-it": "10.4.5"
	}
}
